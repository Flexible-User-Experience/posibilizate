<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="author" content="https://www.flux.cat">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" href="{{ asset('admin/img/favicon.png') }}"/>
    <link rel="icon" type="image/png" href="{{ asset('admin/img/favicon.png') }}" />
    <title>{% block title %}{{ front_main_title | capitalize }}{% endblock %}</title>
    {{ encore_entry_link_tags('app') }}
</head>
<body class="my-body" data-spy="scroll" data-target="#navbar" data-offset="200">
<header>
    <div class="navbar navbar-dark bg-brand-primary shadow-sm">
        <a href="{{ path('app_front_homepage') }}" class="navbar-brand d-flex align-items-center">
            <img height="70" src="{{ asset('build/logo.jpg') }}" alt="{{ front_main_title | capitalize }} logo" class="d-inline-block align-top">
        </a>
    </div>
</header>
{% if app.session.flashbag.peekAll | length > 0 %}
    <div class="container">
        {% for type, messages in app.session.flashbag.all %}
            {% for message in messages %}
                <div class="row">
                    <div class="col-12">
                        <div class="alert alert-{{ type }} alert-dismissible fade show mt-4 mb-4" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Cerrar">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
    </div>
{% endif %}
{% block body %}{% endblock %}
<footer class="footer bg-secondary pt-3 pb-5">
    <div class="container">
        <div class="row">
            <div class="col-3">
                &copy; {{ 'now' | date('Y') }}
            </div>
            <div class="col-9 text-right">
                <ul class="list-inline">
                    <li class="list-inline-item">
                        <a href="#">privacy policy</a>
                    </li>
                    <li class="list-inline-item">Â·</li>
                    <li class="list-inline-item">
                        <a href="#">support</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</footer>
{{ encore_entry_script_tags('app') }}
</body>
</html>
